@model ProjectManagementCollection.Models.ViewModels.UserProject


@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<!DOCTYPE html>
<html class="common" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload - Project Management Collection </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>

<body>
    <main role="main" class="pb-3">
        <div class="container">

            <h1>Upload</h1>
            <hr />
            <h4>@Model.User.FirstName, Please upload your file</h4>
            <br />


            <div class="row">
                <div class="col-md-4">
                    <form asp-controller="Home" asp-action="Upload" enctype="multipart/form-data">

                        <div>
                            <table>


                                <tr>

                                    <td>
                                        <input type="hidden" asp-for="Project.Name" value=@ViewData["ProjectName"] />
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="Project.ProjectId" value=@ViewData["ProjectId"] />
                                    </td>
                                </tr>


                            </table>
                        </div>

                        <div class="form-group">
                            <div class="btn btn-sm float-left">

                                <input name="uploadFile" type="file" />
                            </div>
                        </div>
                        <div class="form-group">
                            <button name="Upload" class="btn btn-primary">Upload Now</button>
                        </div>
                    </form>
                </div>
            </div>
            <br />
            <div>
                <a asp-action="Search">Back to Search</a>
            </div>
        </div>
    </main>





    @section Scripts{
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }

</body>
</html>